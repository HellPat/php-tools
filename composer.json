{
    "name": "hellpat/php-tools",
    "description": "A collection of small helper tools, that are not worth distributing in separate packages",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Hellpat\\Tools\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Patrick Heller",
            "email": "paddy.heller@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "azjezz/psl": "^3.0",
        "roave/you-are-using-it-wrong": "^1.15"
    },
    "require-dev": {
        "vimeo/psalm": "^5.26",
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.12",
        "symplify/easy-coding-standard": "^12.3"
    },
    "config": {
        "allow-plugins": {
            "roave/you-are-using-it-wrong": true
        }
    }
}
